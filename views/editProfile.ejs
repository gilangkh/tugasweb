

<div class="container emp-profile">
                <div class="row">
                    <div class="col-md-12">
                        <div class="profile-head">
                                    <h2 id="heading">
                                        Edit Profiles
                                    </h2>
                                 
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                               <hr>
                             </li>
                              
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                 
                <form action="/user/<%= user.user_id %>/update" id="userForm" method="post" enctype="multipart/form-data">
                    <div class="col-md-12" >
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                 </div>
                                        <div class="row my-3">
                                            <div class="col-md-6">
                                                <label for="username">Username</label>
                                                <input class="form-control" type="text" name="username" id="name" value="<%= user.username %>">
                                            </div>
                                        </div>
                                        <div class="row my-3">
                                            <div class="col-md-6">
                                                <label for="email">Email</label>
                                                <input class="form-control" type="email" name="email" id="email" value="<%= user.email %>">
                                            </div>
                                        </div>
                                        <div class="row my-3">
                                             <div class="col-md-6">
                                                <label for="password">Password</label>
                                                <div class="d-flex justify-content-between" >
                                                    <input class="form-control col-md-12" type="password" name="password" id="password" readonly value="<%= user.password %>">
                                                    <a href="/password" class="btn btn-warning col-md-2 mx-3" >edit</a>    
                                                </div>
                                              </div>   
                                        </div>
                                        <div class="row my-3">
                                            <div class="col-md-6">
                                                <label for="sign_img">sign_img</label>
                                                <input class="form-control" type="file" name="active" id="active"value="server/public/images/<%= user.sign_img %>"">
                                                <input class="form-control" type="text" name="active" id="active"value="/images/<%= user.sign_img %>"">
                                                <img src="/images/<%= user.sign_img %>" alt="" width="200" height="200">
                                            </div>
                                        </div>

                                        <div>
                                            <button type="submit" class="btn btn-danger">Save</button>
                                            <a href="/users" class="btn btn-secondary">Kembali</a>
                                        </div>
                                
                            </div>
                             </div>
                        </div>
                    </form>
                    </div>
                </div>
            </form>           
        </div>
   